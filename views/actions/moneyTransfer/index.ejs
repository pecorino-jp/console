<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">転送アクション検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">転送アクション検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" method="get">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="accountType">口座タイプ</label>
                                <select class="form-control" id="accountType" name="accountType">
                                    <% accountTypes.forEach((accountType) => { %>
                                    <option value="<%= accountType.codeValue %>"
                                        <% if (query.accountType === accountType.codeValue) { %> selected<% } %>>
                                        <%= accountType.name.ja %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="accountNumber">口座番号</label>
                                <input type="text" class="form-control" id="accountNumber" name="accountNumber"
                                    placeholder="口座番号" value="<%= query.accountNumber %>">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">検索</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">検索結果</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="actions-table" class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>開始</th>
                                    <th>終了</th>
                                    <th>ステータス</th>
                                    <th>From タイプ</th>
                                    <th>From 口座</th>
                                    <th>From 名称</th>
                                    <th>To タイプ</th>
                                    <th>To 口座</th>
                                    <th>To 名称</th>
                                    <th>Amount</th>
                                    <th>説明</th>
                                    <th>取引</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>開始</th>
                                    <th>終了</th>
                                    <th>ステータス</th>
                                    <th>From</th>
                                    <th>From タイプ</th>
                                    <th>From 名称</th>
                                    <th>To</th>
                                    <th>To タイプ</th>
                                    <th>To 名称</th>
                                    <th>Amount</th>
                                    <th>説明</th>
                                    <th>取引</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
<script src="/js/actions/moneyTransfer/index.js"></script>
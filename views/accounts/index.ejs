<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">口座検索</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/projects/<%= req.project.id %>/home">Home</a>
                    </li>
                    <li class="breadcrumb-item active">口座検索</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-default">
                    <div class="card-header">
                        <!-- <h3 class="card-title">Quick Example</h3> -->
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                            <a class="btn btn-default btn-sm search" href="#">
                                <i class="fa fa-redo"></i>&nbsp;&nbsp;更新</a>
                        </div>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <!-- form start -->
                        <form role="form" method="get">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="accountType">口座タイプ</label>
                                        <select class="form-control form-control-sm" id="accountType"
                                            name="accountType">
                                            <% accountTypes.forEach((accountType) => { %>
                                            <option value="<%= accountType.codeValue %>"
                                                <% if (query.accountType === accountType.codeValue) { %>
                                                selected<% } %>>
                                                <%= accountType.name.ja %></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="accountNumber">口座番号</label>
                                        <input type="text" class="form-control form-control-sm" id="accountNumber"
                                            name="accountNumber" placeholder="口座番号" value="<%= query.accountNumber %>">
                                    </div>

                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="name">名義</label>
                                        <input type="text" class="form-control form-control-sm" id="name" name="name"
                                            placeholder="名義" value="<%= query.name %>">
                                    </div>

                                </div>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table id="accounts-table" class="table table-sm table-hover dataTable">
                                <thead>
                                    <tr>
                                        <th>口座タイプ</th>
                                        <th>ステータス</th>
                                        <th>口座番号</th>
                                        <th>名義</th>
                                        <th>残高</th>
                                        <th>利用可能残高</th>
                                        <th>開設</th>
                                        <th>解約</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- DataTables -->
<link rel="stylesheet" href="/node_modules/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
<script src="/js/accounts/index.js"></script>
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">入金取引内容確認</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active">入金取引内容確認</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
        </div>
        <!-- ./col -->

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fa fa-text-width"></i>
                            下記内容で入金取引を実行しようとしています...
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>取引ID</dt>
                            <dd>
                                <%= transaction.id %>
                            </dd>
                            <dt>入金者名</dt>
                            <dd>
                                <%= transaction.agent.name %>
                            </dd>
                            <dt>入金先</dt>
                            <dd>
                                <span class="badge badge-secondary <%= transaction.object.accountType %>">
                                    <%= transaction.object.toLocation.accountType %>
                                </span>
                                <%= transaction.object.toLocation.accountNumber %>
                                <br>
                                <%= toAccount.name %>
                            </dd>
                            <dt>金額</dt>
                            <dd>
                                <%= transaction.object.amount %>
                            </dd>
                            <dt>説明</dt>
                            <dd>
                                <%= transaction.object.description %>
                            </dd>
                        </dl>
                    </div>
                    <!-- /.card-body -->

                    <!-- form start -->
                    <form role="form" method="post">
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">確認して入金取引確定</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div> -->
                    <!-- /.card-header -->

                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->